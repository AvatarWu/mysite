    days: reminder?.days || [1, 2, 3, 4, 5],
    enabled: reminder?.enabled ?? true,
    repeat: reminder?.repeat || 'daily' as Reminder['repeat'],
    category: reminder?.category || '',
    priority: reminder?.priority || 'medium' as Reminder['priority']
