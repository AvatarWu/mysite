interface ReminderModalProps {
  reminder?: Reminder;
  onSave: (reminder: Omit<Reminder, '_id' | 'createdAt' | 'updatedAt'>) => void;
  onCancel: () => void;
  getText: (key: string) => string;
}

const ReminderModal: React.FC<ReminderModalProps> = ({ reminder, onSave, onCancel, getText }) => {
