// 簡單的單元測試示例
describe('基本功能測試', () => {
  test('應該能正確計算藥物劑量', () => {
    const calculateDosage = (baseDosage: number, frequency: number) => {
      return baseDosage * frequency;
    };
    
    expect(calculateDosage(1, 3)).toBe(3);
    expect(calculateDosage(2, 2)).toBe(4);
  });

  test('應該能驗證藥物名稱', () => {
    const validateMedicationName = (name: string) => {
      return Boolean(name && name.length > 0 && name.length <= 100);
    };
    
    expect(validateMedicationName('阿司匹林')).toBe(true);
    expect(validateMedicationName('')).toBe(false);
    expect(validateMedicationName('a'.repeat(101))).toBe(false);
  });

  test('應該能格式化時間', () => {
    const formatTime = (time: string) => {
      const [hours, minutes] = time.split(':');
      return `${hours.padStart(2, '0')}:${minutes.padStart(2, '0')}`;
    };
    
    expect(formatTime('8:5')).toBe('08:05');
    expect(formatTime('12:30')).toBe('12:30');
  });
}); 